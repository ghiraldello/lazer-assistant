generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("TURSO_DATABASE_URL")
}

// ── NextAuth.js models ──────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  profile       UserProfile?
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ── App models ──────────────────────────────────────────────────────

model UserProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  githubToken     String?
  githubUsername  String?
  jiraEmail       String?
  jiraApiToken    String?
  llmApiKey       String?
  llmBaseUrl      String?
  llmModel        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id              String   @id @default(cuid())
  userId          String
  name            String   // e.g. "Product Middleware"
  clientName      String   // e.g. "Lazer"
  githubOwner     String   // GitHub org or username
  githubRepo      String   // Repository name
  githubBranch    String   @default("main")
  jiraProjectKey  String   // e.g. "ICGI"
  jiraDomain      String   // e.g. "company.atlassian.net"
  slackWebhookUrl String?  // Optional Slack webhook URL
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reports Report[]
}

model Report {
  id            String   @id @default(cuid())
  projectId     String
  content       String   // Generated EOD text
  rawData       String   // JSON of commits + tickets used
  date          DateTime @default(now())
  postedToSlack Boolean  @default(false)
  createdAt     DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
