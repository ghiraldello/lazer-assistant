generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id              String   @id @default(cuid())
  githubToken     String?
  githubUsername  String?
  jiraEmail       String?
  jiraApiToken    String?
  llmApiKey       String?
  llmBaseUrl      String?
  llmModel        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Project {
  id              String   @id @default(cuid())
  name            String   // e.g. "Product Middleware"
  clientName      String   // e.g. "Lazer"
  githubOwner     String   // GitHub org or username
  githubRepo      String   // Repository name
  githubBranch    String   @default("main")
  jiraProjectKey  String   // e.g. "ICGI"
  jiraDomain      String   // e.g. "company.atlassian.net"
  slackWebhookUrl String?  // Optional Slack webhook URL
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  reports Report[]
}

model Report {
  id            String   @id @default(cuid())
  projectId     String
  content       String   // Generated EOD text
  rawData       String   // JSON of commits + tickets used
  date          DateTime @default(now())
  postedToSlack Boolean  @default(false)
  createdAt     DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
